<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/plug'); %>
    <title>All T/N</title>
    <style>.footer{position:relative;} hr{color:red;} .title{font-weight: bold;}</style>
</head>
<body>
    <div class="top">
        <%- include('partials/header'); %>
    </div>
    <section>
        <% for(let i=data.length-1; i>=0; i--){ %>
            <% let id = data[i]._id; %>
            <% let title = data[i].title; %>
            <% let des = data[i].description; %>
            <% let radio = data[i].radio; %>
            <form action="/tasks" method="post">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label title"><%=title%></label>
                    <input type="text" class="hidden" name="id" value="<%=id%>">
                </div>
                  <div class="mb-3">
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3"><%=des%></textarea>
                  </div>
                  <% if(radio=="true"){ %>
                    <!--radio buttons-->
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="radio" id="flexRadioDefault1" value="false">
                    <label class="form-check-label" for="flexRadioDefault1">
                      Not complete
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="radio" id="flexRadioDefault2" value="true" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                      Complete
                    </label>
                  </div>
                    <%}else{%>
                    <!--radio buttons-->
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="radio" id="flexRadioDefault1" value="false" checked>
                    <label class="form-check-label" for="flexRadioDefault1">
                      Not complete
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="radio" id="flexRadioDefault2" value="true">
                    <label class="form-check-label" for="flexRadioDefault2">
                      Complete
                    </label>
                  </div>
                    <%}%>
                  <button type="submit" class="btn btn-success submit">Update</button>
                  <button type="submit" id="cdelete" class="btn btn-danger submit" name="delete" value="" onclick="del()">Delete</button>
                </form>
                <hr>
            <% } %>
        </section>
    <div class="bottum">
        <%- include('partials/footer'); %>
    </div>
</body>
</html>